{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/gradle.properties$/"
            ],
            "matchStrings": [
                "gradleVersion=(?<currentValue>[^\\s]+)"
            ],
            "autoReplaceStringTemplate": "gradleVersion={{{newValue}}}",
            "datasourceTemplate": "gradle"
        }
    ]
}
